root = true

# Global defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Makefile requires hard tabs (display width 4 is common)
[Makefile]
indent_style = tab
tab_width = 4

# Go follows gofmt: tabs (typically shown as width 8)
[*.go]
indent_style = tab
tab_width = 8
trim_trailing_whitespace = true

# Rust (rustfmt default: 4 spaces)
[*.rs]
indent_style = space
indent_size = 4

# Python (PEP 8 / black: 4 spaces; common max line length 88)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Java
# If you use google-java-format you may prefer 2; otherwise switch to 4 here.
[*.java]
indent_style = space
indent_size = 2

# JavaScript / TypeScript / React
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# JSON / JSONC / TOML
[*.{json,jsonc,toml}]
indent_style = space
indent_size = 2

# YAML (docker-compose, k8s, GitHub Actions) — keep trailing spaces intact
[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Markdown — keep two trailing spaces for <br> line breaks
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Dockerfiles (plain or with suffix like Dockerfile.dev)
[Dockerfile]
indent_style = space
indent_size = 2
[Dockerfile.*]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# .env files may contain meaningful trailing spaces
[.env]
trim_trailing_whitespace = false
[*.env]
trim_trailing_whitespace = false
[.env.*]
trim_trailing_whitespace = false

# This file itself
[.editorconfig]
indent_style = space
indent_size = 2
